<!DOCTYPE html>
<html>
  <head>
    <title>Bugzilla</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/css/bootstrap.css">



  <body>


<div class="navbar navbar-inverse " style="background-color: black">
  <div class="containerw">
    <div class="navbar-header">
      <a class="navbar-brand pull-left" style="color:white" href="#">Bugzilla</a>
      <%if user_signed_in? %>
        <%= link_to "Sign_out" , destroy_user_session_path , class: "navbar-brand pull-right", :method => 'delete'%>
      <%end%>
    </div> <!-- end div class="navbar-header" -->

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">


      </ul>
    </div> <!-- end div class="collapse navbar-collapse" -->
  </div> <!-- end div class="container" -->
</div> <!-- end div class="navbar navbar-default navbar-fixed-top" -->

<%  flash.each  do  |name,  message|  %>

  <%if name == "notice"%>
    <div class="alert alert-info  alert-dismissable">
  <% elsif name == "alert" %>

    <div id="msg" class="alert alert-danger  alert-dismissable">
  <%end%>
  <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
<center><strong><%="#{name}"%></strong> : <%=" #{message}" %></center>
  </div>

<%  end %>
<div class="container">
    <%= yield %>
</div>
  </body>
</html>
