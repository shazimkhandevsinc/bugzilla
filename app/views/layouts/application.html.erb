<!DOCTYPE html>
<html>
  <head>
    <title>Bugzilla</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  <body>


<div class="navbar navbar-inverse ">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" style="color:white" href="#">Bugzilla</a>
    </div> <!-- end div class="navbar-header" -->

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">

      <%if user_signed_in? %>

       <li style="color:white"><%= link_to "Sign_out" , destroy_user_session_path , :method => 'delete'%></li>
       <%end%>
      </ul>
    </div> <!-- end div class="collapse navbar-collapse" -->
  </div> <!-- end div class="container" -->
</div> <!-- end div class="navbar navbar-default navbar-fixed-top" -->

<%  flash.each  do  |name,  message|  %>

  <%if name == "notice"%>
    <div class="alert alert-info  alert-dismissable">
  <% elsif name == "alert" %>

    <div id="msg" class="alert alert-danger  alert-dismissable">
  <%end%>
  <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
<center><strong><%="#{name}"%></strong> : <%=" #{message}" %></center>
  </div>

<%  end %>
<div class="container">
    <%= yield %>
</div>
  </body>
</html>
