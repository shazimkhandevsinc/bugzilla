


<div class="row">

  <div class="col-sm-6 col-sm-offset-3">

    <center><h3 >Forgot Your Password?</h3></center> <br>
    <div class="panel panel-primary">
      <div class="panel-heading">Forget Password</div>
      <div class="panel-body">


        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name) ) do |f| %>
        <%= devise_error_messages! %>

        <%= f.input :email %>
        <%= f.submit "Send me reset password instructions" , class: "btn btn-success" %>

        <br><br>

        <%= render "devise/shared/links" %>

        <% end %>


    </div>
  </div>



</div>

</div>




