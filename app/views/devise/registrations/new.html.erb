


<div class="row">

  <div class="col-sm-6 col-sm-offset-3">

    <center><h3 >Welcome to Bugzilla</h3></center> <br>
    <div class="panel panel-primary">
      <div class="panel-heading">Sign Up </div>
      <div class="panel-body">


        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name))do |f| %>

        <%= f.input :name %>
        <%= f.input :email ,placeholder: 'someone@example.com' %>
        <%= f.input :password ,label: 'Password (Minimum 6 characters long)'%>
        <%= f.input :password_confirmation %>
        <%= f.input :user_type ,include_blank: false, include_hidden: false, collection: ["Manager" , "Developer" , "QA"] %>
        <%= f.file_field :profile, id: "profile-upload"  %>
        <%= f.hidden_field :profile_cache%>
        <br>

        <img id="img_prev" width=100 height=100 src="#" alt="your image" class="img-thumbnail hidden"/> <br/>


        <%= f.submit "Signup" , class: "btn btn-success" %>



        <br><br>

        <%= render "devise/shared/links" %>

        <% end %>


    </div>
  </div>



</div>

</div>



